<!DOCTYPE html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Company Details</title>
  <link rel="stylesheet" href="../../css/admin/css/CompanyDetails.css">
  <script src="https://kit.fontawesome.com/970c139854.js" crossorigin="anonymous"></script>
</head>

<body>
  {{#each messages}}
  <div class="flash_message">{{this}}</div>
  {{/each}}
  <div class="split left">
    <div>
      <form class="menubar" method="post" action="/admin/logout?_method=DELETE">
        <nav>
          <button type="submit" class="logout"><i class="fa-solid fa-sign-out"></i></button>
        </nav>
      </form>
    </div>

    <h1 class="heading" id="title">COMPANY REGISTRATION</h1>
    <div class="centered1">
      <form method="post" action="/admin/AddDetails">
        <div class="input-group">
          <div class="input-field" id="addressField">
            <i class="fa fa-address-card" aria-hidden="true"></i>
            <input type="text" name="address" placeholder="ADDRESS" value="{{address}}" required>
          </div>


          <div class="input-field">
            <i class="fa fa-city"></i>
            <input type="text" name="state" placeholder="STATE" value="{{state}}" required>
          </div>

          <div class="input-field">
            <i class="fa fa-location"></i>
            <input type="text" name="location" placeholder="LOCATION" value="{{location}}" required>
          </div>

          <div class="vertical"></div>

          <div class="centered2">
            <h1 class="headitem">SELECT THE EVENTS</h1>

            <div class="boxes" required>
              <input type="checkbox" id="check1" name="Birthday">BIRTHDAY
              <input type="checkbox" id="check2" name="Wedding">WEDDING
              <input type="checkbox" id="check3" name="Baptism">BAPTISM
              <input type="checkbox" id="check4" name="Funeral">FUNERAL
              <input type="checkbox" id="check5" name="Holy Communion">HOLY COMMUNION
              <input type="checkbox" id="check6" name="Festive Events">FESTIVE EVENTS
              <input type="checkbox" id="check7" name="Anniversary">ANNIVERSARY
            </div>


          </div>
        </div>

        <button type="submit" class="btn">SUBMIT</button>
    </div>
    </form>

    <form action="/admin/addImage" method="post" enctype="multipart/form-data">
      <label for="imageUpload" class="imgbtn">Select an image:</label>
      <input type="file" id="imageUpload" name="image" accept="image/*" required>
      <input type="submit" value="Upload Image">


    </form>
  </div>
  </div>
  <script>
    window.onload = function () {
      const flashMessages = document.querySelectorAll('.flash_message');
      flashMessages.forEach(flashMessage => {
        setTimeout(() => {
          flashMessage.style.display = 'none';
        }, 5000); // 5000ms = 5s
      });
    };
  </script>
</body>

</html>